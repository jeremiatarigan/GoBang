<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccesRegisterAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="242dp"
            android:layout_height="130dp"
            android:src="@drawable/success"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/namaapp" />

        <TextView
            android:id="@+id/namaapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofiaproreguler"
            android:text="Register Was Success"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSee"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn"
            android:text="See My Transportation"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/mregular"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>